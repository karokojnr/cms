<h1>All posts</h1>

{{> home/form-msgs}}
<div class="table-responsive">

<table class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Upload</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>View Post</th>
            <th>Date</th>

        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img height="50" class="img-responsive" src="{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateTime date 'MMM Do YYYY'}}</td>
